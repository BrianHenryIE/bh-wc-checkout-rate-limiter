<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Plugins">
    <description>Generally-applicable sniffs for WordPress plugins</description>

    <rule ref="WooCommerce-Core">
        <exclude name="WooCommerce.Commenting.CommentTags.AuthorTag" />
    </rule>

    <!-- Check all PHP files in directory tree by default. -->
    <arg name="extensions" value="php"/>
    <file>.</file>

    <!-- Show progress and sniff codes in all reports -->
    <arg value="ps"/>

    <exclude-pattern>/assets/</exclude-pattern>
    <exclude-pattern>/scratch/</exclude-pattern>
    <exclude-pattern>src/strauss/</exclude-pattern>
    <exclude-pattern>/tests/_data/</exclude-pattern>
    <exclude-pattern>/tests/_output/</exclude-pattern>
    <exclude-pattern>/tests/_support/</exclude-pattern>
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/wordpress/</exclude-pattern>
    <exclude-pattern>/wp-content/</exclude-pattern>

    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed">
        <exclude-pattern>src/strauss/</exclude-pattern>
    </rule>
    <rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
        <exclude-pattern>tests/</exclude-pattern>
    </rule>
    <rule ref="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase">
        <exclude-pattern>tests/</exclude-pattern>
    </rule>


</ruleset>
